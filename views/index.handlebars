<h1 class="text-center mb-3">{{ title }}</h1>
<form action="api/users" method="POST" class="mb-4">
    <div class="form">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form">
        <label for="email">Email</label>
        <input type="text" name="email" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary btn-block" value="Add A User">
</form>
<h4>Users</h4>
<ul class="list-group">
    {{#each users }}
        <li class="list-group-item">{{ this.name }}:{{ this.email }}</li>
    {{/each }}
</ul>

<a href="api/users" class="btn btn-light mt-4">Visit API</a>